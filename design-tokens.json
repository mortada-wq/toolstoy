{
  "brand": { "name": "Toolstoy", "domain": "toolstoy.app" },
  "color": {
    "background": {
      "primary": "#2E3340",
      "secondary": "#252A36",
      "overlay": "#1E2330"
    },
    "brand": {
      "teal": "#70E6D2",
      "orange": "#FF7A2F",
      "coral": "#F4957A",
      "logoOrange": "#EF8244",
      "logoBurnt": "#BA6339"
    },
    "neutral": {
      "steelBlue": "#8FA3B5",
      "cream": "#FDF0E0",
      "slateText": "#C8D0DC"
    }
  },
  "spacing": { "unit": "8px", "scale": { "1": "4px", "2": "8px", "3": "12px", "4": "16px", "5": "20px", "6": "24px", "8": "32px", "10": "40px", "12": "48px", "16": "64px" } },
  "borderRadius": { "sm": "6px", "md": "12px", "lg": "16px", "xl": "24px", "2xl": "32px", "full": "9999px" },
  "typography": {
    "fontFamily": "Plus Jakarta Sans, Inter, sans-serif",
    "scale": { "xs": "11px", "sm": "13px", "base": "15px", "md": "17px", "lg": "20px", "xl": "24px", "2xl": "30px", "3xl": "38px", "display": "48px" },
    "weight": { "regular": 400, "medium": 500, "semibold": 600, "bold": 700 }
  },
  "shadow": {
    "sm": "0 2px 8px rgba(0,0,0,0.08)",
    "md": "0 4px 16px rgba(0,0,0,0.08)",
    "tealGlow": "0 0 20px rgba(112,230,210,0.25)",
    "orangeGlow": "0 0 20px rgba(255,122,47,0.30)"
  },
  "animation": {
    "duration": { "fast": "150ms", "normal": "250ms", "slow": "400ms", "enter": "350ms" },
    "easing": { "default": "cubic-bezier(0.4,0,0.2,1)", "spring": "cubic-bezier(0.34,1.56,0.64,1)" }
  },
  "components": {
    "button": {
      "primary": { "background": "#FF7A2F", "text": "#FDF0E0", "borderRadius": "9999px", "padding": "12px 24px", "fontWeight": 600 },
      "secondary": { "background": "transparent", "border": "1.5px solid rgba(112,230,210,0.40)", "text": "#70E6D2", "borderRadius": "9999px" }
    },
    "card": { "background": "#252A36", "border": "1.5px solid rgba(143,163,181,0.15)", "borderRadius": "16px", "padding": "24px" },
    "input": { "background": "#1E2330", "border": "1.5px solid rgba(143,163,181,0.25)", "borderRadius": "12px", "padding": "12px 16px", "focusBorder": "1.5px solid rgba(112,230,210,0.60)" }
  },
  "logo": {
    "darkMode": "/logos/logo-darkmode.svg",
    "teal": "/logos/logo-teal.svg",
    "lightMode": "/logos/logo-lightmode.svg",
    "iconOnly": "/logos/logov.svg"
  }
}
